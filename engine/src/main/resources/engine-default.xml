<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
<property>
  <name>engine.rootdir</name>
  <value>/tmp/nta-${user.name}</value>
  <description>A base for other temporary directories.</description>
</property>

<property>
  <name>engine.catalog.dir</name>
  <value>${engine.rootdir}/catalog</value>
  <description>catalog dir</description>
</property>

<property>
  <name>engine.data.dir</name>
  <value>${engine.rootdir}/data</value>
  <description>data dir</description>
</property>

<property>
  <name>engine.master.addr</name>
  <value>local</value>
  <description>The host and port that the MapReduce job tracker runs
  at.  If "local", then jobs are run in-process as a single map
  and reduce task.
  </description>
</property>

<property>
  <name>engine.master.port</name>
  <value>9001</value>
</property>

<property>
  <name>catalog.master.addr</name>
  <value>0.0.0.0</value>
</property>

<property>
  <name>catalog.master.port</name>
  <value>9002</value>
</property>

<property>
  <name>engine.leafserver.addr</name>
  <value>local</value>
  <description>The host and port that the MapReduce job tracker runs
  at.  If "local", then jobs are run in-process as a single map
  and reduce task.
  </description>
</property>

<property>
  <name>engine.leafserver.port</name>
  <value>9001</value>
</property>

<property>
  <name>zookeeper.server.addr</name>
  <value>local</value>
</property>

<property>
  <name>zookeeper.server.port</name>
  <value>2181</value>
</property>

<property>
  <name>zookeeper.server.ticktime</name>
  <value>5000</value>
</property>

<property>
  <name>zookeeper.session.timeout</name>
  <value>180000</value>
</property>

<property>
  <name>zookeeper.server.datadir</name>
  <value>${engine.rootdir}/zk/dir</value>
</property>

<property>
  <name>zookeeper.server.logdir</name>
  <value>${engine.rootdir}/zk/log</value>
</property>

</configuration>
