<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
<property>
  <name>tajo.cluster.distributed</name>
  <value>false</value>
</property>

<property>
  <name>engine.rootdir</name>
  <value>file:///tmp/tazo-${user.name}</value>
  <description>A base for other temporary directories.</description>
</property>

<property>
  <name>engine.data.dir</name>
  <value>${engine.rootdir}/data</value>
  <description>data dir</description>
</property>

<property>
  <name>engine.master.addr</name>
  <value>localhost:9001</value>
</property>

<property>
  <name>catalog.master.addr</name>
  <value>localhost:9002</value>
</property>

<property>
  <name>catalog.store.class</name>
  <value>nta.catalog.store.DBStore</value>
</property>

<property>
  <name>catalog.jdbc.uri</name>
  <value>jdbc:derby:/tmp/tcat-${user.name}/db</value>
</property>

<property>
  <name>engine.leafserver.port</name>
  <value>9003</value>
</property>

<property>
  <name>zookeeper.server.addr</name>
  <value>localhost:2181</value>
</property>

<property>
  <name>zookeeper.server.ticktime</name>
  <value>5000</value>
</property>

<property>
  <name>zookeeper.session.timeout</name>
  <value>180000</value>
</property>

<property>
  <name>zookeeper.server.datadir</name>
  <value>/tmp/zk-${user.name}/dir</value>
</property>

<property>
  <name>zookeeper.server.logdir</name>
  <value>/tmp/zk-${user.name}/log</value>
</property>

</configuration>
